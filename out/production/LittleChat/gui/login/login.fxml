<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="body" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.111" fx:controller="gui.login.LoginGUI">
   <children>
      <AnchorPane fx:id="menuPane" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Button fx:id="menuLoginButton" contentDisplay="CENTER" layoutX="369.0" layoutY="140.0"
                    mnemonicParsing="false" prefHeight="47.0" prefWidth="150.0" styleClass="buttonLogin" text="Login"
                    textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>
            <Button fx:id="menuRegisterButton" contentDisplay="CENTER" layoutX="369.0" layoutY="219.0"
                    mnemonicParsing="false" prefHeight="47.0" prefWidth="150.0" styleClass="buttonLogin" text="Register"
                    textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>
            <ImageView fx:id="logo" fitHeight="236.0" fitWidth="223.0" layoutX="68.0" layoutY="69.0" pickOnBounds="true"
                       preserveRatio="true">
               <image>
                  <Image url="@../assets/images/LittleChatLogo.png"/>
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="loginPane" disable="true" prefHeight="400.0" prefWidth="600.0" visible="false">
         <children>
            <Label layoutX="162.0" layoutY="67.0" styleClass="title" text="LITTLE CHAT" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="39.0" />
               </font>
            </Label>
            <TextField fx:id="username" layoutX="267.0" layoutY="200.0" promptText="JohnCena" />
            <PasswordField fx:id="password" layoutX="267.0" layoutY="256.0" />
            <Label layoutX="162.0" layoutY="205.0" text="Username:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label layoutX="162.0" layoutY="261.0" text="Password:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Button fx:id="loginButton" layoutX="306.0" layoutY="319.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="94.0" styleClass="buttonLogin" text="Login" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="cancelLogin" layoutX="223.0" layoutY="321.0" mnemonicParsing="false" style="-fx-background-color: rgba(0,0,0,0);" text="Back" textAlignment="CENTER" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
